<resources>

    <!-- Base application theme. -->
    <style name="Theme.ChemLabFuel" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.ChemLabFuel.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.ChemLabFuel.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="Theme.ChemLabFuel.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.ChemLabFuel.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

</resources>